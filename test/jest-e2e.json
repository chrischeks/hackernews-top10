{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "verbose": true,
   "maxWorkers": 1,
  "coverageDirectory": "./coverage/jest",
  "moduleNameMapper": {
    "@src/(.*)": "<rootDir>/src/$1"
  }
}
